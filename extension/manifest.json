{
  "manifest_version": 2,
  "name": "tabbie",
  "description": "a simple tab organizer",
  "icons": { "16": "/images/icon.png",
           "48": "/images/icon.png",
          "128": "/images/icon.png" },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  "version": "0.0.1",
  "background": {
    "scripts": ["/js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "/images/icon.png"
  }
}
